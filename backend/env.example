# ========================================
# üöÄ ANOUD JOB WEBSITE - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ========================================
# üåç SERVER CONFIGURATION
# ========================================
NODE_ENV=production
PORT=3234

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================
# Local MongoDB
MONGO_URI=mongodb://localhost:27017/anoudjob

# OR Cloud MongoDB (MongoDB Atlas)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/anoudjob?retryWrites=true&w=majority

# ========================================
# üîê SECURITY & AUTHENTICATION
# ========================================
# Generate a strong random string for JWT secret
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# JWT token expiration (in seconds)
JWT_EXPIRES_IN=86400

# ========================================
# üìß EMAIL CONFIGURATION (Optional)
# ========================================
# Gmail with App Password (recommended)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# OR Outlook
# EMAIL_SERVICE=outlook
# EMAIL_USER=your-email@outlook.com
# EMAIL_PASS=your-password

# ========================================
# üåê CORS & DOMAIN CONFIGURATION
# ========================================
# Production domains (comma-separated)
ALLOWED_ORIGINS=https://www.anoudjob.com,https://anoudjob.com

# ========================================
# üìÅ FILE UPLOAD CONFIGURATION
# ========================================
# Maximum file size (in bytes) - 10MB default
MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# ========================================
# üîç LOGGING & MONITORING
# ========================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ========================================
# üöÄ PERFORMANCE & OPTIMIZATION
# ========================================
# Enable compression
ENABLE_COMPRESSION=true

# Cache control
CACHE_CONTROL_MAX_AGE=31536000

# ========================================
# üìä HEALTH CHECK & MONITORING
# ========================================
# Health check endpoint
HEALTH_CHECK_ENDPOINT=/health

# ========================================
# üîí RATE LIMITING (Optional)
# ========================================
# Rate limit window (in minutes)
RATE_LIMIT_WINDOW=15

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# üìù NOTES
# ========================================
# 1. Change all default values before deployment
# 2. Use strong, unique secrets
# 3. Test in staging environment first
# 4. Keep .env files secure and never commit them
# 5. Use environment-specific configurations
# 6. Regularly rotate secrets and credentials

# ========================================
# üö® SECURITY CHECKLIST
# ========================================
# ‚úÖ JWT_SECRET is strong and unique
# ‚úÖ MONGO_URI is secure and authenticated
# ‚úÖ CORS origins are restricted to production domains
# ‚úÖ Email credentials are secure
# ‚úÖ File upload limits are reasonable
# ‚úÖ Rate limiting is enabled
# ‚úÖ Logging is appropriate for production
# ‚úÖ Error messages don't leak sensitive information
