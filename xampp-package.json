{
  "name": "anoudjob-backend-xampp",
  "version": "1.0.0",
  "private": true,
  "main": "server.js",
  "description": "Anoud Job Website Backend - XAMPP Compatible",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "xampp": "DEPLOYMENT_ENV=xampp node server.js",
    "xampp:dev": "DEPLOYMENT_ENV=xampp nodemon server.js",
    "xampp:prod": "DEPLOYMENT_ENV=xampp NODE_ENV=production node server.js",
    "pm2:start": "pm2 start server.js --name anoudjob-backend-xampp",
    "pm2:restart": "pm2 restart anoudjob-backend-xampp",
    "pm2:stop": "pm2 stop anoudjob-backend-xampp",
    "pm2:delete": "pm2 delete anoudjob-backend-xampp",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0",
    "build": "echo \"No build process needed for Node.js backend\" && exit 0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "socket.io": "^4.8.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "anoud",
    "job",
    "website",
    "xampp",
    "nodejs",
    "express",
    "mongodb",
    "react"
  ],
  "author": "Ahmed Megahed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/anoudjob.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/anoudjob/issues"
  },
  "homepage": "https://github.com/yourusername/anoudjob#readme",
  "xampp": {
    "description": "XAMPP deployment configuration",
    "apache": {
      "document_root": "C:/xampp/htdocs/anoudjob",
      "virtual_host": "anoudjob.local",
      "port": 80
    },
    "nodejs": {
      "port": 3234,
      "host": "localhost",
      "log_dir": "logs"
    },
    "mongodb": {
      "port": 27017,
      "database": "Anoud"
    }
  }
}
